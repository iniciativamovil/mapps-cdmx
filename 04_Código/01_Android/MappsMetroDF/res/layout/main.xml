<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
	<include layout="@layout/titlebar" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:background="@drawable/bgtrasn01"
        android:gravity="center"
		android:layout_marginBottom="2sp">
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"/>
	    <ImageButton
	        android:id="@+id/rutaBoton"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="2"
			android:scaleType="fitCenter"
	        android:background="@drawable/none"
	        android:src="@drawable/rutaboton" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center|top"
            android:text="¿Como llegar a la estación?"
            android:textColor="#FFF"
            android:textSize="13sp" />

	</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6" >
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:layout_weight="1"
	        android:background="@drawable/bgtrasn01"
	        android:gravity="center"
	        android:layout_marginRight="1sp">
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="5"/>
	        <ImageButton
	            android:id="@+id/directorioBoton"
	            android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_weight="2"
				android:scaleType="fitCenter"
	            android:background="@drawable/none"
	            android:src="@drawable/directorio" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4"
	            android:gravity="center|top"
	            android:text="¿Que hay en la estación?"
	            android:textColor="#FFF"
            	android:textSize="13sp"/>
		</LinearLayout>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:layout_weight="1"
	        android:background="@drawable/bgtrasn01"
	        android:gravity="center"
	        android:layout_marginLeft="1sp">
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="5"/>
	        <ImageButton
	            android:id="@+id/mapasBoton"
	            android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_weight="2"
				android:scaleType="fitCenter"
	            android:background="@drawable/none"
	            android:src="@drawable/boton_mapas" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4"
	            android:gravity="center|top"
	            android:text="Aqui están los mapas..."
            	android:textSize="13sp"
	            android:textColor="#FFF"/>
	        </LinearLayout>
    </LinearLayout>
    <!-- android:textColor="#f7951d" => color Naranja -->
    <TextView
        android:id="@+id/patroDivision"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:text="Publicidad"
        android:textStyle="bold"
        android:textColor="#777"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/headerbg"/>    
    <ImageButton
        android:id="@+id/bannerBoton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:background="@drawable/bggris"
        android:scaleType="centerInside"
        android:src="@drawable/logo_mapps_vertical" />
</LinearLayout>
