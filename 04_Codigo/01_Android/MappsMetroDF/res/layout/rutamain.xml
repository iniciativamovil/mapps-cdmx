<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar" />
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="@drawable/bg">
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="3"
			android:layout_marginTop="10sp"
	        android:orientation="horizontal">
	        <LinearLayout
	            android:id="@+id/linearLayout3"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:background="@drawable/bgtrasn01"
	            android:orientation="vertical" 
	            android:layout_marginLeft="2sp"
	           	android:layout_marginRight="2sp"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton
	                android:id="@+id/imageButton1"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:background="@drawable/none"
	                android:scaleType="centerInside"
	                android:src="@drawable/dondeestas"
	                android:layout_gravity="left">
	            </ImageButton>
				<TextView
				    android:id="@+id/textDondeEstas"
				    android:layout_width="fill_parent"
					android:layout_height="40sp"
					android:ellipsize="marquee"
					android:layout_margin="5px"
					android:layout_gravity="center"
					android:gravity="center"
				    android:textSize="15sp"
					android:textColor="#FFF" 
				    android:text="¿Donde estás?"/>
				<TextView
				    android:id="@+id/textDondeEstasSub"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Selecciona una estación."
					android:textColor="#FFF"
					android:singleLine="false"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="10sp"/>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/linearLayout4"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical"
	            android:background="@drawable/bgtrasn01"
	            android:layout_marginLeft="2sp"
	           	android:layout_marginRight="2sp"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton
	                android:id="@+id/imageButton2"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_gravity="right"
	                android:layout_weight="1"
	                android:background="@drawable/none"
	                android:scaleType="centerInside"
	                android:src="@drawable/dondevas" />
				<TextView
			        android:id="@+id/textDondeVas"
			        android:layout_width="fill_parent"
					android:layout_height="40sp"
					android:layout_margin="5px"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="15sp"
					android:textColor="#FFF" 
					android:text="¿A donde vas?"/>
				<TextView
				    android:id="@+id/textDondeVasSub"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Tambien necesito tu destino."
					android:textColor="#FFF"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="10sp"/>
	        </LinearLayout>
		</LinearLayout>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="3"
			android:layout_marginTop="2sp"
	        android:orientation="horizontal">
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_margin="2sp"
		        android:layout_weight="4"
		        android:background="@drawable/bgtrasn01"
		        android:gravity="center" 
		        android:layout_gravity="center"
		        android:orientation="vertical">
				<LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="4"/>
		        <ImageButton
		            android:id="@+id/Button1"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
					android:layout_weight="3"
		            android:background="@drawable/none"
		            android:src="@drawable/icon_verruta"
		            android:scaleType="centerInside"
					android:layout_gravity="center"
		            android:gravity="center_horizontal"/>
		        <TextView 
		            android:id="@+id/textCalcula"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="4"
		            android:gravity="center|bottom"
					android:text="Ver todas las rutas"
		            android:textColor="#FFF" />
		        <TextView
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Haz click aca para conocer las rutas."
					android:textColor="#FFF"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="10sp"/>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="4"
		        android:background="@drawable/bgtrasn01"
		        android:layout_margin="2sp"
		        android:gravity="center"
		        android:orientation="vertical">
				<LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="4"/>

		        <ImageView
		            android:id="@+id/imageAyuda"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="3"
		            android:background="@drawable/none"
		            android:gravity="center"
		            android:scaleType="fitCenter"
		            android:src="@drawable/icon_ayuda"
		            android:tag=" Ver Instrucciones "
		            android:textColor="#FFF" />
				<TextView
		            android:id="@+id/textAyuda"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="4"
		            android:textColor="#FFF"
		            android:background="@drawable/none"
		            android:text=" ¿ Necesitas Ayuda ?  "
		            android:gravity="center|bottom"
		            android:tag=" Ver Instrucciones "
		            android:textSize="15sp" />
				<TextView
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Haz click aca para ver algunas instrucciones."
					android:textColor="#FFF"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="10sp"/>
			</LinearLayout>
		</LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="bottom"
			android:layout_weight="3"
	        android:layout_gravity="bottom"
	        android:orientation="vertical">
		    <TextView
		        android:id="@+id/patroDivision"
		        android:layout_width="fill_parent"
		        android:layout_height="25sp"
		        android:text="Publicidad"
		        android:textStyle="bold"
		        android:textColor="#777"
		        android:gravity="center"
		        android:textSize="15sp"
		        android:background="@drawable/headerbg"/>    
		    <ImageButton
		        android:id="@+id/bannerBoton"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="@drawable/banner_anunciate"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>